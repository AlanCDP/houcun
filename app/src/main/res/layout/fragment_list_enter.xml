<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="单 位"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/next_right"
                    android:gravity="center_vertical|end"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="职 位"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/tv_post"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableEnd="@mipmap/next_right"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="考核周期"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/tv_inspection_period"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/next_right"
                    android:gravity="center_vertical|end"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="分 类"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/tv_classification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/next_right"
                    android:gravity="center_vertical|end"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="考核内容"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <cn.com.szw.lib.myframework.view.ClearWriteEditText
                    android:id="@+id/et_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您要考核的内容"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="是否加分项"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="是"
                        android:textColor="@color/text_shallow_gray" />

                    <RadioButton
                        android:id="@+id/radio_current"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="否"
                        android:textColor="@color/text_shallow_gray" />
                </RadioGroup>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="是否否决项"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <RadioGroup
                    android:id="@+id/radio_group1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_date1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="是"
                        android:textColor="@color/text_shallow_gray" />

                    <RadioButton
                        android:id="@+id/radio_current1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="否"
                        android:textColor="@color/text_shallow_gray" />
                </RadioGroup>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="标准分值"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <cn.com.szw.lib.myframework.view.ClearWriteEditText
                    android:id="@+id/et_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入分值"
                    android:inputType="number"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="审核人"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/tv_people"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableEnd="@mipmap/next_right"
                    android:gravity="center_vertical|end"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <TextView
                android:id="@+id/btn_add"
                android:padding="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="20dp"
                android:background="@mipmap/longbtn"
                android:gravity="center"
                android:text="保存并提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>