<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >


    <ImageView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_yuan_red" />

    <LinearLayout
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划时间：2018-09-09 18：90"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="12sp" />


            </LinearLayout>




            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginTop="@dimen/margin_5"
                android:padding="2dp"
                android:text="12月31日前完成组织任务"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/textGary" />


            <LinearLayout
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/unit"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="受理单位:候村煤矿"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/people"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="end"
                    android:text="受理人:矿长"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="11sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/project_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="项目名称:候村煤矿"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/status"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="end"
                    android:text="待受理"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="11sp" />



            </LinearLayout>



        </LinearLayout>
    </LinearLayout>


</LinearLayout>