<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_yuan_red" />

    <LinearLayout
        android:layout_marginStart="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/limitDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="限制日期：2018-09-09 18：90"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="12sp" />

                <!--<TextView-->
                    <!--android:id="@+id/status"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="待考核"-->
                    <!--android:gravity="end"-->
                    <!--android:textColor="@color/text_shallow_gray"-->
                    <!--android:textSize="12sp" />-->

            </LinearLayout>




            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:text="12月31日前完成组织任务"
                android:textColor="@color/text_gray"
                android:textSize="13sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@color/textGary" />


            <TextView
                android:id="@+id/unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:text="单位：侯村煤矿"
                android:textColor="@color/text_shallow_gray"
                android:textSize="11sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="职务：矿长"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="周期5年"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="11sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>