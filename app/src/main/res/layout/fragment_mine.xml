<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="账号管理"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/next_right"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="end"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="版本更新"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/next_right"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="end"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="客服电话"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/next_right"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="end"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="关于我们"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@mipmap/next_right"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="end"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />


    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@mipmap/login_btn_bg"
        android:gravity="center"
        android:padding="15dp"
        android:text="退出登陆"
        android:textColor="@color/white" />

</LinearLayout>