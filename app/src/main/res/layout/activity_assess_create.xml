<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/action_bar_tv"/>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/unit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/next_right"
                android:gravity="start"
                android:minEms="6"
                android:padding="@dimen/dp_10"
                android:text="单位"
                android:textColor="@color/text_shallow_gray"
                android:textSize="@dimen/margin_13" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginEnd="@dimen/margin_5"
            android:layout_marginStart="5dp"
            android:background="@color/lin_gray" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5">
            <TextView
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableEnd="@mipmap/next_right"
                android:gravity="start"
                android:minEms="6"
                android:padding="@dimen/dp_10"
                android:text="职务"
                android:textColor="@color/text_shallow_gray"
                android:textSize="@dimen/margin_13" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_0.5"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_marginStart="20dp"
            android:background="@color/lin_gray" />


        <TextView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="20dp"
            android:background="@mipmap/longbtn"
            android:gravity="center"
            android:text="查 询"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />



    </LinearLayout>



    <LinearLayout
        android:layout_marginBottom="@dimen/margin_15"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </android.support.v7.widget.RecyclerView>
        </android.support.v4.widget.SwipeRefreshLayout>




    </LinearLayout>



</LinearLayout>