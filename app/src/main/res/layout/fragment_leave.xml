<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="请假类型"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:id="@+id/leave_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/next_right"
            android:gravity="center_vertical|end"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="开始时间"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/next_right"
            android:gravity="center_vertical|end"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="结束时间"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:id="@+id/end_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/next_right"
            android:gravity="center_vertical|end"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="请假事由"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/reason"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center_vertical|end"
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="主管领导"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:id="@+id/zhuguan_people"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/next_right"
            android:gravity="center_vertical|end"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="上级领导"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <TextView
            android:id="@+id/shangji_people"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableEnd="@mipmap/next_right"
            android:gravity="center_vertical|end"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:minEms="6"
            android:padding="@dimen/dp_10"
            android:text="备注"
            android:textColor="@color/text_shallow_gray"
            android:textSize="@dimen/margin_13" />

        <cn.com.szw.lib.myframework.view.ClearWriteEditText
            android:id="@+id/remark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:lineSpacingMultiplier="1.2"
            android:gravity="center_vertical|end"
            android:textColor="@color/text_gray"
            android:textColorHint="@color/text_shallow_gray"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_0.5"
        android:background="@color/lin_gray" />


    <TextView
        android:id="@+id/btn_add"
        android:padding="@dimen/margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="20dp"
        android:background="@mipmap/longbtn"
        android:gravity="center"
        android:text="保存并提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</LinearLayout>