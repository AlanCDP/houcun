<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/action_bar_tv" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="完成情况"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/complete_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:drawablePadding="@dimen/margin_5"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:drawableEnd="@mipmap/next_right"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginStart="20dp"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="分值"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/et_point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textColor="@color/text_gray"
                    android:textColorHint="@color/text_shallow_gray"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:layout_marginEnd="@dimen/margin_20"
                android:layout_marginStart="20dp"
                android:background="@color/lin_gray" />


            <TextView
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_20"
                android:layout_marginTop="20dp"
                android:background="@mipmap/longbtn"
                android:gravity="center"
                android:text="保存并提交"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_15"
                android:background="@color/background"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="考核内容"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/check_content"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="的进口量将看多了就分手快乐健康路附近考虑的时间风口浪尖德生科技发来的数据父控件的谁离开房间看电视荆防颗粒绝对说了开发"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="限制日期"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2019-09-09"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="分 类"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/classfy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="责任"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="是否加分项"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/isExtraScore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="否"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="是否否决项"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/isVetoScore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="否"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:minEms="6"
                    android:padding="@dimen/dp_10"
                    android:text="标准的分"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="@dimen/margin_13" />

                <TextView
                    android:id="@+id/point"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2.0"
                    android:gravity="center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_0.5"
                android:background="@color/lin_gray" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>